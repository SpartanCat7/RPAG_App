<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="5dp"
    android:paddingHorizontal="10dp">
    <ImageView
        android:id="@+id/imgAlertTypeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitStart"
        android:src="@drawable/custom_alert_icon_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/btnSelectAlertType"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgAlertTypeIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="PLACEHHOLDER"
        android:layout_marginStart="10dp"
        android:paddingHorizontal="20dp"
        android:textAlignment="viewStart"
        android:background="@drawable/alert_menu_button"
        android:textColor="@color/colorWhite"/>

</androidx.constraintlayout.widget.ConstraintLayout>