<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettingsActivity">

    <LinearLayout
        android:id="@+id/activity_settings_username_current_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:id="@+id/activity_settings_username_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username:"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingEnd="10dp"/>
            <TextView
                android:id="@+id/activity_settings_username_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IAmUser01"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_settings_username_label"/>
            <TextView
                android:id="@+id/activity_settings_username_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Update]"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_settings_username_change_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:visibility="visible">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_settings_username_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="New username">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_settings_username_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_settings_username_field_layout"
                android:gravity="center">
                <Button
                    android:id="@+id/activity_settings_username_btn_change_confirm"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm"/>
                <Button
                    android:id="@+id/activity_settings_username_btn_change_cancel"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_settings_phone_current_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/activity_settings_username_current_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:id="@+id/activity_settings_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone:"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingEnd="10dp"/>
            <TextView
                android:id="@+id/activity_settings_phone_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94850258"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_settings_phone_label"/>
            <TextView
                android:id="@+id/activity_settings_phone_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Update]"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_settings_phone_change_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:visibility="visible">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_settings_phone_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="New phone number">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_settings_phone_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_settings_phone_field_layout"
                android:gravity="center">
                <Button
                    android:id="@+id/activity_settings_phone_btn_change_confirm"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm"/>
                <Button
                    android:id="@+id/activity_settings_phone_btn_change_cancel"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_settings_fullname_current_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/activity_settings_phone_current_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:id="@+id/activity_settings_fullname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full name:"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingEnd="10dp"/>
            <TextView
                android:id="@+id/activity_settings_fullname_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John McUser"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_settings_fullname_label"/>
            <TextView
                android:id="@+id/activity_settings_fullname_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Update]"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_settings_fullname_change_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:visibility="visible">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_settings_fullname_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="Updated full name">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_settings_fullname_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_settings_fullname_field_layout"
                android:gravity="center">
                <Button
                    android:id="@+id/activity_settings_fullname_btn_change_confirm"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm"/>
                <Button
                    android:id="@+id/activity_settings_fullname_btn_change_cancel"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_settings_email_current_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/activity_settings_fullname_current_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:id="@+id/activity_settings_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingEnd="10dp"/>
            <TextView
                android:id="@+id/activity_settings_email_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mcuser@mail.com"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_settings_email_label"/>
            <TextView
                android:id="@+id/activity_settings_email_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Update]"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_settings_email_change_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:visibility="visible">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_settings_email_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="New email">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_settings_email_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_settings_email_field_layout"
                android:gravity="center">
                <Button
                    android:id="@+id/activity_settings_email_btn_change_confirm"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm"/>
                <Button
                    android:id="@+id/activity_settings_email_btn_change_cancel"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>